
@{
    ViewBag.Title = "UpdateInventory";
}

<h2>UpdateInventory</h2>
@model CoffeeApp.Models.Item

<form action="/Home/SaveUpdatedItem" method="post">
    <label>Product ID</label>
    <input class="form-control" type="text" name="productid" value="@ViewBag.RecordToBeUpdated.ProductID" readonly /><br />
    <label>Item Name</label>
    <input class="form-control" type="text" name="name" value="@ViewBag.RecordToBeUpdated.Name" readonly /><br />
    <label>Description</label>
    <input class="form-control" type="text" name="type" value="@ViewBag.RecordToBeUpdated.Type" readonly /><br />
    <label>Quantity</label>
    <input class="form-control" type="text" name="quantity" value="@ViewBag.RecordToBeUpdated.Quantity" /><br />
    <label>Price</label>
    <input class="form-control" type="text" name="price" value="@ViewBag.RecordToBeUpdated.Price" /><br />    
    <button type="submit" class="btn btn-primary">Save</button><br />

</form>
