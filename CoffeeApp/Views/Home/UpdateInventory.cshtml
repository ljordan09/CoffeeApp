
@{
    ViewBag.Title = "UpdateInventory";
}

<h2>UpdateInventory</h2>

<form action="/Home/" method="post">
    <label>Product ID</label>
    <input class="form-control" type="text" name="productid" value="@ViewBag.ItemChoice.ProductID" readonly /><br />
    <label>Item Name</label>
    <input class="form-control" type="text" name="name" value="@ViewBag.ItemChoice.Name" readonly /><br />
    <label>Description</label>
    <input class="form-control" type="text" name="type" value="@ViewBag.ItemChoice.Type" /><br />
    <label>Quantity</label>
    <input class="form-control" type="text" name="quantity" value="@ViewBag.ItemChoice.Quantity" /><br />
    <label>Price</label>
    <input class="form-control" type="text" name="price" value="@ViewBag.ItemChoice.Price" /><br />    
    <button type="submit" class="btn btn-primary">Save</button><br />

</form>
